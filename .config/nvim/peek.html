<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
  <script>
    mermaid.initialize({ startOnLoad: true });
  </script>
  <style>
    body {
      font-family: sans-serif;
      padding: 2rem;
    }
  </style>
</head>
<body>
  <div id="app"></div>
  <script>
    const content = await (await fetch("peek-content")).text();
    document.getElementById("app").innerHTML = `<pre class="mermaid">${content}</pre>`;
    mermaid.init();
  </script>
</body>
</html>
